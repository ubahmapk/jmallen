{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "CodeBucketName": {
          "Type": "String",
          "Default": "jmallen-site-content",
          "Description": "The name of the S3 bucket where site content is stored."
        }
    },
    
    "Resources": {
            "cloudtrailLogsBucketForJMAllenSite": {
                "Type": "AWS::S3::Bucket",
                "DeletionPolicy": "Delete",
                "Properties": {
                    "BucketName": "cloudtrail-logs-bucket-for-jmallen",
                    "Tags": [
                        {
                            "Key": "Project",
                            "Value": "JMAllen"
                        }
                    ],
                    "BucketEncryption": {
                        "ServerSideEncryptionConfiguration": [
                            {
                                "ServerSideEncryptionByDefault": {
                                    "SSEAlgorithm": "AES256"
                                }
                            }
                        ]
                    }
                }
            },
            "JMAllenSiteBucket": {
                "Type": "AWS::S3::Bucket",
                "DeletionPolicy": "Delete",
                "Properties": {
                    "BucketName": "jmallen-site-bucket",
                    "Tags": [
                        {
                            "Key": "Project",
                            "Value": "JMAllen"
                        }
                    ],
                    "BucketEncryption": {
                        "ServerSideEncryptionConfiguration": [
                            {
                                "ServerSideEncryptionByDefault": {
                                    "SSEAlgorithm": "AES256"
                                }
                            }
                        ]
                    },
                    "LifecycleConfiguration": {
                        "Rules": [
                            {
                                "Status": "Disabled"
                            }
                        ]
                    },
                    "LoggingConfiguration": {
                        "DestinationBucketName": { "Ref": "cloudtrailLogsBucketForJMAllenSite" },
                        "LogFilePrefix": "jmallen-site-access-logs/"
                    },
                    "VersioningConfiguration": {
                        "Status": "Suspended"
                    }
                }
            },
            "IAMJMAllenSiteUpload": {
                "Type": "AWS::IAM::Role",
                "DeletionPolicy": "Delete",
                "Properties": {
                    "Tags": [
                        { 
                            "Key": "Project",
                            "Value": "JMAllen"
                        }
                    ],
                    "Policies": [
                        {
                            "PolicyName": "S3GetAndListPolicy",
                            "PolicyDocument": {
                                "Version": "2012-10-17",
                                "Statement": [
                                    {
                                        "Sid": "S3GetAndList",
                                        "Effect": "Allow",
                                        "Action": [
                                            "s3:GetObject",
                                            "s3:ListBucket"
                                        ],
                                        "Resource": { 
                                            "Fn::Join": [
                                                "", [
                                                    { "Fn::GetAtt": [ "JMAllenSiteBucket", "Arn" ] },
                                                    "/*"
                                                ]
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
    },

    "Outputs": {
        "JMAllenSiteBucket": {
            "Value": { "Fn::GetAtt": [ "JMAllenSiteBucket", "Arn" ] },
            "Description": "ARN of the S3 bucket for site content."
        }
    }
}